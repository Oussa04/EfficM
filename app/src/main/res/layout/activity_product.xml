<?xml version="1.0" encoding="utf-8"?>




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="128dp"
        android:paddingRight="128dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Description de l'article"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@android:color/white"
                        android:elevation="0dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:visibility="visible" />

                    <tn.meteor.efficaisse.utils.SquareImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="190dp"
                        android:layout_height="197dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/product" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/addPhotoGallery"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/photo2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"

                                android:layout_weight="1"
                                android:scaleType="center"
                                android:src="@drawable/ic_photo"
                                android:tint="@color/colorAccent" />

                            <TextView
                                android:id="@+id/galleryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Photo"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/addPhotoCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <at.markushi.ui.CircleButton
                                android:id="@+id/camera"
                                android:layout_width="64dip"
                                android:layout_height="64dip"
                                android:layout_weight="1"
                                android:src="@drawable/ic_camera"
                                android:tint="@color/colorWhite" />


                            <TextView
                                android:id="@+id/cameraText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Appareil photo"
                                android:textSize="18sp" />
                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="356dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/swap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:orientation="horizontal"
                        >

                        <Button
                            android:id="@+id/toMarchandise"
                            style="@style/Widget.AppCompat.Button.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Marchandise"
                            android:textColor="@color/colorAccent"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/toProduit"
                            style="@style/Widget.AppCompat.Button.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Produit"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/libelle"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"


                        android:background="@drawable/selector_gray"
                        android:hint="Libelle"
                        android:inputType="textPersonName"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/textColorHint" />

                    <EditText
                        android:id="@+id/cost"


                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"


                        android:background="@drawable/selector_gray"
                        android:hint="Prix d'achat"
                        android:inputType="numberDecimal"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/textColorHint"

                        />

                    <EditText
                        android:id="@+id/price"


                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"


                        android:background="@drawable/selector_gray"
                        android:hint="Prix de vente"
                        android:inputType="numberDecimal"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/textColorHint" />

                    <EditText
                        android:id="@+id/quantity"


                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"


                        android:background="@drawable/selector_gray"
                        android:hint="Quantité actuelle"
                        android:inputType="numberDecimal"
                        android:paddingLeft="16dp"
                        android:textColorHint="@color/textColorHint"  />

                    <Switch
                        android:id="@+id/favorite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="74dp"
                        android:layout_marginRight="72dp"
                        android:layout_marginTop="10dp"
                        android:text="Mettre en favoris" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="74dp"
                        android:layout_marginRight="72dp"
                        android:layout_marginTop="10dp"
                        android:text="Catégorie"
                        android:textAlignment="textStart" />

                    <Spinner
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"


                        android:background="@drawable/selector_gray"

                        android:spinnerMode="dialog"
                        android:text="Catégorie" />


                    <Button
                        android:id="@+id/finish"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_round_green"
                        android:text="Terminer"
                        android:textColor="@android:color/white" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

